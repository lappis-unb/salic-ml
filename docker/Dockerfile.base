FROM debian:buster-slim

EXPOSE 8080

RUN apt-get update && apt-get install -y --no-install-recommends \
        python3 \
        python3-pip \
        python3-crypto \
        python3-pyodbc \
        python3-setuptools \
        python3-dev \
        tdsodbc \
        unixodbc-dev \
        unixodbc \
        freetds-dev \
        freetds-bin \
        freetds-common \
        cron \
        apt-utils \
        gnupg2 \
        apt-transport-https

COPY src/requirements/development.txt development.txt
COPY src/requirements/production.txt production.txt

RUN pip3 install -r development.txt
